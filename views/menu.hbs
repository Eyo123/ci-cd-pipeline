

<head>

    <h1>UNIVERSITY OF PLYMOUTH COVID-19 STUDENT CLASSIFICATION </h1>
    <meta charset="utf-8" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <a href="http://localhost:8000/"> Websocket App Link </a>






    <script>

        var result = "";

        $(window).on("load", function() {
            $("#reset").click(function(){
                $("#date").html("");
                $("#temperature").val("");
                $("#output").html("");
                $("#output").css("background-color","#ffffff");

            });



            $("#check").click(function() {


                        enabledreset();
                        var case1="";
                        var case2="";
                        var date= new Date();
                        var month=date.getMonth()+1;
                        var year=date.getFullYear();

                        var day=date.getDate();

                        var Stringdate= year + "-" + month +"-0" + day;
                        $("#date").html(Stringdate);
                        let temperature = $("#temperature").val();

                        if ($('input[type=checkbox]').prop('checked')){

                            temperature=f2c(temperature);
                        }




                        if (temperature < 33) {
                            case1= "Not positive/low temperature";
                            case2="Free";
                            $("#output").html(case1);
                            $("#statue").html(case1);
                            $("#output").css("background-color", "#0af3ff");

                        }



                        else if (temperature < 38){
                            case1="Not positive/Excellent condition";
                            case2="Free";
                            $("#output").html(case1);
                            $("#statue").html(case1);
                            $("#output").css("background-color", "#24ff0f");


                        }
                        else if (temperature < 43){
                            case1="Covid-19 : positive/normal case";
                            case2="2 weeks Home ";
                            $("#output").html(case1);
                            $("#statue").html(case1);
                            $("#output").css("background-color", "#FBFF2E");


                        }
                        else  {
                            case1="Covid-19 : Positive/dangerous case";
                            case2=" Urgent state / Hospital confinement";
                            $("#output").html(case1);
                            $("#statue").html(case1);
                            $("#output").css("background-color", "#FF0309");
                        }


                        valStatue(case1);



                    }





            );








        } );






        function enabledreset(){
            document.getElementById("reset").disabled=false;

        }
        function valStatue(x){
            document.getElementById("statue").value=x;

        }
        function valconfinement(x){
            document.getElementById("confinement").value=x;

        }
        function f2c(temp){
            var c= (temp-32)*5/9;
            return c;
        }

    </script>
</head>







        <section class="covid">
            <h3>Covid Test</h3>
            <input type="text" id="temperature" value="Enter Student temperature">
            <input type="checkbox" id="fahrenheit" >
            <label for="fahrenheit" id="fahrenheit_lbl">Fahrenheit</label>
            <p id="output"></p>
            <p id="date"></p>
            <button id="check" >Check student temperature</button>
            <button id="reset" disabled="reset">Reset ALL </button>
        </section>





