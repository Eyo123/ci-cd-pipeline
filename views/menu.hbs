              </div>
              <button type="submit">INSERT</button>
              </form>
        </section>




        <section class="get">
            <h3>Load List of student Covid Data</h3>
            <a href="/get-data">Display Student Data</a>
            <div>
           {{# each items }}
            <article class="item">
                <div>Student Name: {{ this.name }}</div>
                <div>Address: {{ this.address }}</div>
                <div>statue: {{ this.statue }}</div>
                <div>Date: {{ this.date_doc }}</div>
